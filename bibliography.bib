archivePrefix = {arXiv},
arxivId = {1702.02994},
author = {Arney, Giada N. and Meadows, Victoria S. and Domagal-Goldman, Shawn D. and Deming, Drake and Robinson, Tyler D. and Tovar, Guadalupe and Wolf, Eric T. and Schwieterman, Edward},
