keywords = {binaries: spectroscopic,open clusters and associations: individual:: beta Pictoris Moving Group,stars: activity,stars: kinematics and dynamics,stars: low-mass,stars: pre-main sequence},
month = {jun},
title = {{All-sky Co-moving Recovery Of Nearby Young Members. (ACRONYM) II: The Beta Pictoris Moving Group}},
