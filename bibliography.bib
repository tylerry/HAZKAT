eprint = {1508.05955},
issn = {0035-8711},
journal = {Monthly Notices of the Royal Astronomical Society, Volume 454, Issue 1, p.593-614},
keywords = {Hertzsprung-Russell and colour-magnitude diagrams,open clusters and associations: general,solar neighbourhood,stars: evolution,stars: pre-main-sequence,techniques: photometric},
month = {aug},
