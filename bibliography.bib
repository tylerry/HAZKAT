eprint = {1004.1396},
issn = {0004-637X},
journal = {The Astrophysical Journal, Volume 723, Issue 1, pp. 116-128 (2010).},
keywords = {ISM: lines and bands,hydrodynamics,planets and satellites: general,plasmas,ultraviolet: general},
month = {apr},
pages = {116--128},
title = {{Characterizing the thermosphere of HD209458b with UV transit observations}},
url = {http://arxiv.org/abs/1004.1396 http://dx.doi.org/10.1088/0004-637X/723/1/116},
volume = {723},
