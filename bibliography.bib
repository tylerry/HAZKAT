keywords = {planets and satellites: detection,stars: activity,stars: fundamental parameters,techniques: photometric,techniques: radial velocities},
month = {nov},
title = {{Estimating Stellar Radial Velocity Variability from Kepler and GALEX: Implications for the Radial Velocity Confirmation of Exoplanets}},
