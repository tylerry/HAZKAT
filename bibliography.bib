arxivId = {1606.09580},
author = {Cuntz, M. and Guinan, E. F.},
doi = {10.3847/0004-637X/827/1/79},
eprint = {1606.09580},
issn = {0004-637X},
journal = {The Astrophysical Journal, Volume 827, Issue 1, article id. 79, 9 pp. (2016).},
keywords = {astrobiology,mass function,planets and satellites: terrestrial planets,stars: activity,stars: late-type,stars: luminosity function},
month = {jun},
title = {{About Exobiology: The Case for Dwarf K Stars}},
