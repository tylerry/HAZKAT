keywords = {mass,stars: low},
month = {jan},
title = {{HAZMAT III: The UV Evolution of Mid- to Late-M Stars with GALEX}},
url = {http://arxiv.org/abs/1801.06711 http://dx.doi.org/10.3847/1538-3881/aaaa24},
volume = {155},
