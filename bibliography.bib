journal = {The Astrophysical Journal, Volume 845, Issue 2, article id. 132, 10 pp. (2017).},
keywords = {astrobiology,planets and satellites: atmospheres},
month = {may},
title = {{No snowball on habitable tidally locked planets}},
url = {http://arxiv.org/abs/1705.08904 http://dx.doi.org/10.3847/1538-4357/aa80e1},
volume = {845},
year = {2017}
}

